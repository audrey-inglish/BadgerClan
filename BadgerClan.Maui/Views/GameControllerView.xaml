<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadgerClan.Maui.Views.GameControllerView"
             Title="GameControllerView">



    <VerticalStackLayout BackgroundColor="#dcd9fa">
    <VerticalStackLayout Padding="20" 
                         WidthRequest="400">

        <Label Text="Choose Strategy: " 
               FontSize="Medium"
               FontAttributes="Bold"/>
        <Picker ItemsSource="{Binding AvailableStrategies}"
                SelectedItem="{Binding CurrentStrategy}" 
                Margin="0,15,0,10"
                BackgroundColor="White"/>

        <!--<Label Text="Current Strategy:"
               FontSize="Large"
               HorizontalOptions="Center" />
        <Label Text="{Binding CurrentStrategy}"
               FontSize="Large"
               HorizontalOptions="Center" />-->

        <Button Text="Set Strategy"
                Command="{Binding SetStrategyCommand}"
                CommandParameter="{Binding CurrentStrategy}" />
    </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>